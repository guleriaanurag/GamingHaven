                        <ion-icon name="menu-outline" class="menu"></ion-icon>
                        <ion-icon name="close-outline" class="close"></ion-icon>
                    </button>

                </div>

            </div>
        </div>

    </header>



    <div class="gamecontainer">
        <div class="container text-center">
            <div class="row">
                <% gameData.forEach(game=> { %>
                    <div class="col-3 marg">
                        <div class="card cardDesign" style="width: 22rem;">
                            <img src='http://localhost:3001/getImages/<%=game.ImageName%>' class="card-img-top cardImg"
                                alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=game.name %>
                                </h5>

                                <% if(loginSuccess) {%>
                                    <a href="/playgame/<%=game._id%>" class="btn playbtn">Play</a>
                                    <% } else{ %>
                                            <p class="text-danger" style="font-size: large;">Please Login to play</p> 
                                        <% } %>
                            </div>
                        </div>
                    </div>

                    <% }); %>
            </div>
        </div>

